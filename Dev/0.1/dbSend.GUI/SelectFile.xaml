<Window x:Class="dbSend.GUI.SelectFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="dbSend" Height="300" Width="700" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>

        <Grid HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" Width="600">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <TextBox Name="textBox" HorizontalAlignment="Center" Height="23" VerticalAlignment="Center" Width="350" Background="WhiteSmoke" />
            <Button Name="browseButton" Content="Browse" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="browseButton_Click"/>
            <Button Name="okButton" Content="OK" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="okButton_Click"/>
        </Grid>

    </Grid>
</Window>
