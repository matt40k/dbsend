<Window x:Class="dbSend.GUI.SelectName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="dbSend" Height="300" Width="700" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox Name="textBox" Grid.Column="1" HorizontalAlignment="Center" Height="23" VerticalAlignment="Center" Width="350" Background="WhiteSmoke" />
        <Button Name="okButton" Content="OK" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="okButton_Click"/>
    </Grid>
</Window>
